---
import ThemeToggle from "./ThemeToggle.astro";
import { useTranslations, type Lang } from "../i18n/utils";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const alternateLang = lang === "en" ? "es" : "en";

const navItems = [
  {
    title: t.nav.projects,
    label: "projects",
    url: "#projects",
  },
  {
    title: t.nav.aboutMe,
    label: "about",
    url: "#about",
  },
  {
    title: t.nav.contact,
    label: "contact",
    url: "#contact",
  },
];
---

<header
  class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-4"
>
  <span></span>
  <nav
    class="flex px-8 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center border border-teal-400"
  >
    {
      navItems.map((link) => (
        <a
          class="relative block px-2 py-2 transition hover:text-teal-400 dark:hover:text-teal-400"
          aria-label={link.label}
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }

    <ThemeToggle />
    <a
      href={`/${alternateLang}/`}
      class="relative block px-3 py-2 transition hover:text-teal-400 dark:hover:text-teal-400 font-semibold"
      aria-label={`Switch to ${alternateLang === "en" ? "English" : "Spanish"}`}
    >
      {alternateLang.toUpperCase()}
    </a>
  </nav>
</header>

<style>
  nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  nav {
    @apply dark:bg-gray-800/90 bg-white/90;
  }

  @keyframes nav-shadown {
    0% {
      @apply dark:bg-gray-800/0 bg-white/0;
    }
    to {
      @apply shadow-lg ring-1 backdrop-blur ring-white/10;
    }
  }
</style>
